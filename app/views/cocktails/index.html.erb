<div class="container">
  <div class="row">
  <h3><%= link_to 'Create a new cocktail', new_cocktail_path(@cocktail) %></h3>
  <h2>List of Cocktails</h2>
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill %>')">
        <% end %>
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
      </div>
  </div>
<% end %>
</div>

